<div id="newword">
	<header>
		<h3>What Words Define You?</h3>
	</header>
	<form id="new_word_form" action="/words/create.json">
		<div class="content">
			<div>
				<label class="required">Word(s)</label>
				<br/>
				<textarea name="words" placeholder="Words, separated by commas"></textarea>
			</div>
			<div>
				<label class="optional">Context</label>
				<br/>
				<textarea name="context" placeholder="Why/how are these word(s) significant?"></textarea>
			</div>
			<div>
				<label class="optional">Owner</label>
				<br/>
				<textarea name="owner" placeholder="Who are you?"></textarea>
			</div>
			<div class="buttonbar">
				<input id="save" type="button" value="Save"/>
			</div>
		</div>
	</form>
	<footer></footer>
	<script type="text/javascript">
		$("#save").click(function(){
			$.post($("#new_word_form").attr("action"), $("#new_word_form").serialize(),
		      function(data) {
		          $("#words table tbody").prepend(data);
		          $.fancybox.close();
		      }
		    );
		});
		$("#newword .content textare[name='words']").focus();
	</script>
</div>